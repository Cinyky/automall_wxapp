<!--首页的商品-->
<template name="goodsList_index">
    <scroll-view bindscrolltolower="scrollbottom" class="m-scrollBox" scroll-y="true" style="padding-bottom: 100rpx;">
        <block wx:if="{{goodsList.length > 0}}">
            <view class="m-goods-item" wx:for="{{goodsList}}" wx:for-item="goods">
                <image mode="scaleToFill" src="{{imageUrl}}{{goods.carImages[0].imageId}}"></image>
                <view class="goods-item-right">
                    <view>{{goods.title}}</view>
                    <view>{{goods.band}}</view>
                    <view>￥{{goods.price}} w</view>

                </view>

            </view>
        </block>
    </scroll-view>
</template>

<template name="goodsList_favor">
    <block wx:for="{{goodsList}}" wx:for-item="goods">
        <view>{{goods.title}}</view>
        <swiper autoplay="true" class="swiper" duration="1000" indicator-dots="true" interval="5000">
            <block wx:for="{{goods.carImages}}" wx:for-item="image">
                <swiper-item>
                    <image class="slide-image" mode="scaleToFill" src="{{imageUrl}}{{image.imageId}}"></image>
                </swiper-item>
            </block>
        </swiper>

        <view>{{goods.band}}</view>
        <view>￥{{goods.price}} w</view>
    </block>
</template>


