<!--pages/shop/shop.wxml-->
<scroll-view class="notice">
  <view class="scrolltxt">
    <view class="marquee_box">
      <view class="marquee_text" style="transform: translateX(-{{marqueeDistance}}px)">
        <text>{{shop.description}}</text>
        <text style="margin-right:{{marquee_margin}}px;"></text>
        <text style="margin-right:{{marquee_margin}}px;">{{shop.description}}</text>        
      </view>
    </view>
  </view>
</scroll-view>

<view class="banner">
    <image src="/assets/image/shop_bg.png" style="width: {{imagewidth}}px; height: {{imageheight}}px;" bindload="imageLoad"/>
    <text class="banner-text">{{shop.name}}</text>
</view>


 <view class="weui-cells weui-cells_after-title" style="margin-bottom: 30rpx;">
        <view class="weui-cell weui-cell_access" >
            <view class="weui-cell__hd">
                <image src="/assets/image/yeqb.png" style="margin-right: 20rpx;vertical-align: middle;width:40rpx; height: 40rpx;"></image>
            </view>
            <view class="weui-cell__bd">电话</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{shop.tel}}</view>
        </view>

        <view class="weui-cell weui-cell_access">
            <view class="weui-cell__hd">
                <image src="/assets/image/mydz.png" style="margin-right: 20rpx;vertical-align: middle;width:32rpx; height: 40rpx;"></image>
            </view>
            <view class="weui-cell__bd">微信</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{shop.wechat}}</view>
        </view>

        <view class="weui-cell weui-cell_access">
            <view class="weui-cell__hd">
                <image src="/assets/image/mydz.png" style="margin-right: 20rpx;vertical-align: middle;width:32rpx; height: 40rpx;"></image>
            </view>
            <view class="weui-cell__bd">地址</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">{{shop.location}}</view>
        </view>

</view>



<map
    bindtap="map"
    markers="{{markers}}"
    enable-scroll=false
    enable-zoom=false
    id="myMap"
    latitude="{{shop.latitude}}"
    longitude="{{shop.longitude}}"
    show-compass
    show-location
    style="width: 100%; height: 300px;"
/>